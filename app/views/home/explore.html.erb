<div class="explore-container">
	<h1 class="title"><a href="/"><span id="fit">FIT</span>racker</a></h1>
	<h2 class="explore-copy">Explore Your Interests</h2>
	
	<div class="explore-following-side-menu">
		<div class="follow">	
			<h4> Following </h4>
			<ul>
				<% current_user.followeds.each do |user| %>
					<li><%= image_tag user.avatar.url, class: "follow-avatar" %></li>
					<li><%= link_to user.fname + " " + user.lname, user_path(user) %></li><br>
				<% end %>
			</ul>
		</div>
		<hr class="follow-hr">
		<div class="follow">
			<h4> Followers </h4>
			<ul>
				<% current_user.followers.each do |user| %>
					<li><%= image_tag user.avatar.url, class: "follow-avatar" %></li>
					<li><%= link_to user.fname + " " + user.lname, user_path(user) %></li><br>
				<% end %>
			</ul>
		</div>
	</div>

	<div id="accordian" class="row user-interests">
		<%= render 'accordian' %>
	</div>

	<div class="interest-section">
		<%= render 'interest_divs' %>
	</div>

</div>


