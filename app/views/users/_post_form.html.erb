<%= form_for @post, :html => { :multipart => true } do |f| %>
	<%=f.text_area :body, placeholder: "Update your status...", :class => "post_body form-control" %>
	<%=f.text_field :tag, placeholder: "#add tags to your post (i.e. #running, #yoga)", :class => "post_tag form-control" %>
  <p class="btn btn-default add-image-btn">Add Image</p>
  <p class="btn btn-default add-video-btn">Add Video</p>
  <p class="choose-file-btn"><%=f.file_field :image, :class => "post-image" %></p>
  <div class="choose-vid-file"><%=f.text_field :video, :placeholder => "Place video url here...", :class => "embed-video" %></div>
	<%=f.submit 'Post', :class => "btn btn-default postBtn" %>
<% end %>

<script>
	$(document).ready(function(){
		$('.add-image-btn').click(function(){
			$('.choose-file-btn').show();
			$('.choose-vid-file').hide();
		});
		$('.add-video-btn').click(function(){
			$('.choose-vid-file').show();
			$('.choose-file-btn').hide();
		})
	})
</script>