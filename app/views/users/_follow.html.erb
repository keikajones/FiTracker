<div class="follow">	
	<h4> Following </h4>
	<ul>
		<% @user.followeds.each do |user| %>
			<li><%= image_tag user.avatar.url, class: "follow-avatar" %></li>
			<li><%= link_to user.fname + " " + user.lname, user_path(user) %></li><br>
		<% end %>
	</ul>
</div>
